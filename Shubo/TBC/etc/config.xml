<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <shubo_tbc>
                <active>1</active>
                <title>TBC Payment</title>
                <order_status>pending_payment</order_status>
                <model>TBCPaymentAdapter</model>
                <can_use_checkout>1</can_use_checkout>
                <payment_action>authorize</payment_action>
                <auto_capture>0</auto_capture>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <is_gateway>1</is_gateway>
                <can_review_payment>1</can_review_payment>
                <sort_order>10</sort_order>
                <secret_key_for_purchases backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <secret_key_for_purchases_test backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
            </shubo_tbc>
        </payment>
    </default>
</config>
